/*
Given an integer x, return true if x is a palindrome, and false otherwise.

This is my second attempt. I will try to revisit to optimize 
since it is still slow and takes up plenty of space

Runtime 14 ms
Beats 5.38%
Memory 10.48 MB
Beats 22.42%

*/



class Solution {
public:
    bool isPalindrome(int x) {
    //main space to declare and initialize variables
        bool test = true;
        string num = to_string(x);
        //cout << num<< "\n";
        int i = 0;
        int j = num.size()-1;
        //This loop will slowly check the number from each side and compare them if true
        //will try to meet in the middle till either the char doesn't match or they meet.
        while(i<j){
            //cout << num[i] << " ";
            //cout << num[j] << "\n";
            if(num[i]==num[j]){
                i++;
                j--;
            }
            else{
                test=false;
                break;
            }
        }
        //if loop all char match then true
        return test;
    }
};
